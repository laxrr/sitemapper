{
  "manifest_version": 3,
  "name": "Sitemap Sniffer",
  "version": "1.0.0",
  "description": "Finds sitemaps on visited sites and shows a cleaned list of URLs.",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Sitemaps",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}